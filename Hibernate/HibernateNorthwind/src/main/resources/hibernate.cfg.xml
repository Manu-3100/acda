<hibernate-configuration>
    <session-factory>

        <!-- Configuraci칩n de conexi칩n -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/NorthWind</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Dialecto de Hibernate -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Generaci칩n autom치tica de tablas -->
        <property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Mapear las clases -->
        <mapping class="pojos.Category"/>
        <mapping class="pojos.Customer"/>
        <mapping class="pojos.Employee"/>
        <mapping class="pojos.EmployeeTerritories"/>
        <mapping class="pojos.EmployeeTerritory"/>
        <mapping class="pojos.Order"/>
        <mapping class="pojos.OrderDetail"/>
        <mapping class="pojos.Product"/>
        <mapping class="pojos.Region"/>
        <mapping class="pojos.Shipper"/>
        <mapping class="pojos.Supplier"/>
        <mapping class="pojos.Territory"/>
    </session-factory>
</hibernate-configuration>
